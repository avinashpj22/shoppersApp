{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Yarp": "Information"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:8000"
      },
      "Https": {
        "Url": "https://localhost:8001"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "products-api": {
        "ClusterId": "products-service",
        "Match": {
          "Path": "/api/v1/products/{**catch-all}"
        },
        "Order": 1
      },
      "orders-api": {
        "ClusterId": "orders-service",
        "Match": {
          "Path": "/api/v1/orders/{**catch-all}"
        },
        "Order": 2
      },
      "health-route": {
        "ClusterId": "products-service",
        "Match": {
          "Path": "/health"
        },
        "Order": 0
      }
    },
    "Clusters": {
      "products-service": {
        "Destinations": {
          "products-api": {
            "Address": "http://localhost:5000"
          }
        }
      },
      "orders-service": {
        "Destinations": {
          "orders-api": {
            "Address": "http://localhost:5002"
          }
        }
      }
    }
  }
}
